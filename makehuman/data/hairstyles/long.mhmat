# Material definition for MakeHuman long hair

name LongHairMaterial

// Color shading attributes
ambientColor 1.0 1.0 1.0
diffuseColor 0.4 0.13 0.0
diffuseIntensity 0.8
specularIntensity 0.0
shininess 1
emissiveColor 0.0 0.0 0.4
opacity 0

transparent true

// Textures and properties
diffuseTexture long_texture.png
transparencymapIntensity 1.0

// Shader programme
shader data/shaders/glsl/phong

// Configure built-in shader defines
shaderConfig diffuse true
shaderConfig bump false
shaderConfig normal false
shaderConfig displacement false
shaderConfig spec false
shaderConfig vertexColors true


